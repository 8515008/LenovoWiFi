<view:BottomRightWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Lenovo.WiFi.Client.View"
        x:Class="Lenovo.WiFi.Client.View.MainWindow"
        Height="400" Width="400"
        
        Style="{StaticResource WindowSize}"
    >
    <Grid>
        <Image Style="{StaticResource AppIconStyle}" />
        <Label x:Name="LabelCaption" Style="{StaticResource LabelTitle}"  Margin="37,0,0,0" />

        <Image x:Name="QRCode" Source="{Binding QRCode, Mode=OneWay}" Height="142" VerticalAlignment="Top" Margin="111,60,121,0" />
        <Label Content="扫描此二维码进行连接" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="111,223,111,0" Style="{StaticResource LabelTitle}"/>
        <Label x:Name="LabelWiFiName" Content="{DynamicResource WiFiName}"
        	Width="93" Margin="63,273,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource LabelTitle}"/>
        <TextBox x:Name="TextBoxWiFiName" Text="{Binding SSID, Mode=OneWay}"
        	Width="143" Height="23" Margin="174,277,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label x:Name="LabelWiFiKey" Content="{DynamicResource WiFiKey}"
        	Width="93" Margin="63,315,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource LabelTitle}"/>
        <TextBox x:Name="TextBoxWiFiKey" Text="{Binding PresharedKey, Mode=OneWay}"
        	Width="143" Height="23" Margin="174,320,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button x:Name="ButtonClose"
        	Height="32"
        	MaxWidth="250"
        	Margin="360,0,0,0"
        	VerticalAlignment="Top"
        
        	Background="Transparent"
        	Cursor="Hand"
        	Visibility="Visible"
        	MouseLeftButtonDown="CloseWindow" RenderTransformOrigin="1.375,0.524" Width="32" Template="{DynamicResource ButtonCloseTemplate}"
		/>

    </Grid>
</view:BottomRightWindow>
