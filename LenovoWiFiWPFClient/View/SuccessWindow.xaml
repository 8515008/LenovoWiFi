<view:BottomRightWindow x:Class="Lenovo.WiFi.Client.View.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Lenovo.WiFi.Client.View"
        Height="402" Width="403" WindowStyle="None"
        ShowInTaskbar="True" Icon="/Resources/logo.ico" Background="{DynamicResource Brush_background}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImgIcon"
        	Width="32" Height="32" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/LenovoWiFiWPFClient;component/Resources/mywifi_32.png" />
        <Label x:Name="LabelCaption" Content="{DynamicResource AppName}"
        	HorizontalAlignment="Left" Margin="42,5,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="37" Width="92" FontFamily="Microsoft YaHei" FontSize="16" />


        <Button Name="fileNameLink"
        Height="32"
        MaxWidth="250"
        Margin="359.5,5,6.5,0"
        VerticalAlignment="Top"
        
        Background="Transparent"
        Cursor="Hand"
        Visibility="Visible"
		MouseLeftButtonDown="CloseWindow" RenderTransformOrigin="1.375,0.524" Width="32"
		>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="pannel1" >
                        <Border Padding="5">
                            <StackPanel >
                                <Image x:Name="image1" Stretch="Fill" Source="Resources/close_32.png"  Visibility="Collapsed"/>
                                <Image x:Name="image2" Stretch="Fill" Source="Resources/close_32.png"  Visibility="Visible"/>
                            </StackPanel>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Visibility" TargetName="image1" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="image2" Value="Collapsed"/>
                            <Setter Property="Background" TargetName="pannel1" Value="Gold"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>



        <Image x:Name="ImgSuccess" Height="186" Margin="51.5,42,51.5,0" VerticalAlignment="Top" Source="/LenovoWiFiWPFClient;component/Resources/wifi_512.png" />
        <Label x:Name="LabelWiFiName" Content="{DynamicResource WiFiName}"
                Width="68.5" Margin="51,231,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="33.96" FontSize="14.667" FontFamily="Microsoft YaHei" />
        <TextBox x:Name="TextBoxWiFiName" Text="{Binding SSID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Width="210.5" Height="33" Margin="134,231,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14.667" FontFamily="Microsoft YaHei" />
        <Label x:Name="LabelWiFiKey" Content="{DynamicResource WiFiKey}"
               Width="78" Margin="51,273,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" FontSize="14.667" FontFamily="Microsoft YaHei" />
        <TextBox x:Name="TextBoxWiFiKey" Text="{Binding PresharedKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Width="210.5" Height="31" Margin="134,273,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14.667" FontFamily="Microsoft YaHei" />
        <Button x:Name="ButtonModify" Content="{DynamicResource Modify}" IsEnabled="{Binding IsModified}" Command="{Binding AcceptChanges}" Margin="134,331,136,0" VerticalAlignment="Top" Height="31.96" FontSize="16" FontFamily="Microsoft YaHei"/>
    </Grid>
</view:BottomRightWindow>
