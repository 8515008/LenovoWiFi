<view:BottomRightWindow x:Class="Lenovo.WiFi.Client.View.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Lenovo.WiFi.Client.View"
        Height="100" Width="300"
        Style="{StaticResource WindowSize}">
    <Grid>
        <Image Style="{StaticResource AppIconStyle}" />
        <Label x:Name="LabelCaption" Style="{StaticResource LabelTitle}"  Margin="37,0,0,0" />
        <Label x:Name="LabelMessage" Content="{Binding Message}"
               HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" MaxWidth="200" MaxHeight="26" Style="{StaticResource LabelTitle}"/>

    </Grid>
</view:BottomRightWindow>
