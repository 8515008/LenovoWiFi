<view:BottomRightWindow
    x:Class="Lenovo.WiFi.Client.View.NotificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:Lenovo.WiFi.Client.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    Height="120" Width="400" WindowStyle="None" Background="{DynamicResource WindowBackgroundBrush}"
	d:DataContext="{d:DesignData /SampleData/NotificationViewModelSampleData.xaml}">
	<Grid>
        <Label Content="{DynamicResource AppName}" Style="{DynamicResource BigFontSizeStyle}"
			Margin="10, 0" HorizontalAlignment="Left"  VerticalAlignment="Top" />
        <Label Content="{Binding Message}" Style="{DynamicResource NormalFontSizeStyle}"
			HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" MaxWidth="200" />

	</Grid>
</view:BottomRightWindow>
