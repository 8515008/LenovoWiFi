<view:BottomRightWindow x:Class="Lenovo.WiFi.Client.View.StatusWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:Lenovo.WiFi.Client.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    Height="170" Width="400" WindowStyle="None" Background="{DynamicResource WindowBackgroundBrush}"
	d:DataContext="{d:DesignData /SampleData/StatusViewModelSampleData.xaml}">
	<Grid>
		<Label Content="{DynamicResource AppName}" FontSize="24"
			Margin="10, 0" HorizontalAlignment="Left"  VerticalAlignment="Top" />
		<Label Content="{DynamicResource WiFiName}" FontSize="18"
			HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,45,0,0" />
		<Label Content="{Binding SSID}" FontSize="18"
			HorizontalAlignment="Left" VerticalAlignment="Top" Margin="173.323,45,0,0" Width="144" />
		<Label Content="{DynamicResource WiFiKey}" FontSize="18"
			HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,78.94,0,0" />
		<Label Content="{Binding PresharedKey}" FontSize="18"
			HorizontalAlignment="Left" VerticalAlignment="Top" Margin="173.323,78.94,0,0" />
		<Label Content="{Binding Status}" FontSize="14"
			HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 10" />
	</Grid>
</view:BottomRightWindow>
