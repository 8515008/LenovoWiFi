<view:BottomRightWindow x:Class="Lenovo.WiFi.Client.View.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Lenovo.WiFi.Client.View"
        Height="170" Width="300" Style="{StaticResource WindowSize}">
    <Grid>
        <Label x:Name="LabelWiFiName" Content="{DynamicResource WiFiName}"
        	Width="78" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,51,0,0" Style="{StaticResource LabelTitle}"/>
        <Label x:Name="LabelWiFiNameValue" Content="{Binding SSID}"
        	Width="137" Height="29" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,51,0,0"  Style="{StaticResource LabelTitle}"/>
        <Label x:Name="LabelWiFiKey" Content="{DynamicResource WiFiKey}"
        	Width="78" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,93,0,0"  Style="{StaticResource LabelTitle}"/>
        <Label x:Name="LabelWiFiKeyValue" Content="{Binding PresharedKey}"
        	Width="137" Height="34" Margin="125,93,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label x:Name="LabelStatus" Content="{Binding Status}"
            HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
        <Image Style="{StaticResource AppIconStyle}" />
        <Label x:Name="LabelCaption" Style="{StaticResource LabelTitle}"  Margin="37,0,0,0" />
    </Grid>
</view:BottomRightWindow>
