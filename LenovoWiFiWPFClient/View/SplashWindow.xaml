<view:BottomRightWindow x:Class="Lenovo.WiFi.Client.View.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Lenovo.WiFi.Client.View"
        Height="150" Width="300" 
                        Style="{StaticResource WindowSize}">
    <Grid>
        <Image Style="{StaticResource AppIconStyle}" />
        <Label x:Name="LabelCaption" Style="{StaticResource LabelTitle}"  Margin="37,0,0,0" />
        <Label x:Name="LabelMessage" Content="{DynamicResource StartupMessage}" Style="{StaticResource LabelTitle}"
            HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</view:BottomRightWindow>
