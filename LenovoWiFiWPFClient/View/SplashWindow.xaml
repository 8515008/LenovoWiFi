<view:BottomRightWindow x:Class="Lenovo.WiFi.Client.View.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:Lenovo.WiFi.Client.View"
        Height="150" Width="400" WindowStyle="None" Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <Label Content="{DynamicResource AppName}" Style="{DynamicResource BigFontSizeStyle}"
			Margin="10, 0" HorizontalAlignment="Left"  VerticalAlignment="Top" />
        <Label Content="{DynamicResource StartupMessage}" Style="{DynamicResource NormalFontSizeStyle}"
            HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</view:BottomRightWindow>
