<windows:BottomRightWindow x:Class="Lenovo.WiFi.Client.Windows.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:windows="clr-namespace:Lenovo.WiFi.Client.Windows"
        Height="300" Width="300" WindowStyle="None">
    <Grid>
        <Image x:Name="ImgIcon"
        	Width="32" Height="32" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="{DynamicResource AppLogo}" />
        <Label x:Name="LabelCaption" Content="{DynamicResource AppName}"
        	HorizontalAlignment="Left" Margin="42,5,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Image x:Name="ImgSuccess"
                Width="292" Height="100" Margin="0,42,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelWiFiName" Content="{DynamicResource WiFiName}"
                Width="65" Margin="40,160,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxWiFiName"
                 Width="143" Height="23" Margin="110,162,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label x:Name="LabelWiFiKey" Content="{DynamicResource WiFiKey}"
               Width="65" Margin="40,193,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="TextBoxWiFiKey"
                 Width="143" Height="23" Margin="110,194,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Button x:Name="BtnModify" Content="{DynamicResource Modify}"
                Width="75" Margin="28.5,240,188.5,0" VerticalAlignment="Top" />
        <Button x:Name="BtnSave" Content="{DynamicResource Save}"
                Width="75" Margin="0,240,0,0" VerticalAlignment="Top" />
        <Button x:Name="BtnCancel" Content="{DynamicResource Cancel}"
                Width="75" Margin="188.5,240,28.5,0" VerticalAlignment="Top"/>
    </Grid>
</windows:BottomRightWindow>
