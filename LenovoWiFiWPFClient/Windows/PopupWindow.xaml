<windows:BottomRightWindow x:Class="Lenovo.WiFi.Client.Windows.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:windows="clr-namespace:Lenovo.WiFi.Client.Windows"
        Height="100" Width="300" ResizeMode="NoResize"
        ShowInTaskbar="False" Topmost="True" WindowStyle="None">
    <Grid>
        <Image x:Name="ImgIcon"
               Width="32" Height="32" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" Source="{DynamicResource AppLogo}" />
        <Label x:Name="LabelCaption" Content="{DynamicResource AppName}"
               HorizontalAlignment="Left" Margin="42,5,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="LabelMessage" Content="kidd-phone连入了你的WiFi！"
               HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" MaxWidth="200" MaxHeight="26"/>

    </Grid>
</windows:BottomRightWindow>
